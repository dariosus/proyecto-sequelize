<%- include("../template/header") %>
        <h1><%=genre.name%></h1>
        <ul>
          <li>
              Ranking: <%=genre.ranking%>
          </li>
          <li>
            Movies:
            <% if (genre.movies.length > 0) { %>
              <ul>
                <% for (let i = 0; i < genre.movies.length; i++) { %>
                  <li>
                    <a href="/movies/<%=genre.movies[i].id%>">
                      <%=genre.movies[i].title%>
                    </a>
                  </li>
                <% } %>
              </ul>
            <% } else { %>
              <p>The genre has no movies :(</p>
            <% } %>
          </li>

        </ul>
        <div class="button">
          <a href="/genres/edit/<%=genre.id%>">
            <button type="button" name="button" class="btn btn-primary">Edit</button>
          </a>
          <form action="/genres/delete?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="<%=genre.id%>">
            <button type="submit" name="button" class="btn btn-danger">Delete</button>
          </form>
        </div>
        <a href="/genres">Back to list</a>
<%- include("../template/footer") %>
